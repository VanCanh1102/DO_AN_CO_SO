}
<div class="wrapper">
      <nav id="sidebar" class="active">
        <div class="sidebar-header" id="sidebar-title">
          <h3>
            <i class="bi bi-envelope-paper-heart-fill"></i>Quản Lý Nhân Sự
          </h3>
          <strong><i class="bi bi-list"></i></strong>
        </div>

        <ul class="list-unstyled components">
          <li class="active">
            <a href="./index.html">
              <i class="bi bi-house"></i>
              Home
            </a>
          </li>
          <li>
            <a href="./page/add_employee.html">
              <i class="bi bi-person-plus"></i>
              Thêm Nhân Viên
            </a>
          </li>
          <li>
            <a href="./page/edit_employee.html">
              <i class="bi bi-pencil-square"></i>
              Sửa Nhân Viên
            </a>
          </li>
          <li>
            <a href="./page/view_employee.html">
              <i class="bi bi-person"></i>
              Xem Nhân Viên
            </a>
          </li>
          <!-- Thêm các liên kết đến các trang (pages) khác ở đây -->
        </ul>
      </nav>

      <div id="content">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
          <div class="container-fluid">
            <a class="navbar-brand" href="#">HRM Management</a>
          </div>
        </nav>
        <div class="container" id="main">
          <div class="row justify-content-center align-items-center mt-4">
            <div class="col-lg-6 col-lg-offset-4">
              <form id="employee-form">
                <div class="form-group row mb-3">
                  <label for="input-manv" class="col-sm-3 col-form-label"
                    >Employee ID</label
                  >
                  <div class="col-sm-9">
                    <input
                      type="text"
                      class="form-control"
                      id="input-manv"
                      placeholder="Employee ID"
                      required
                    />
                  </div>
                </div>
                <div class="form-group row mb-3">
                  <label for="input-hoten" class="col-sm-3 col-form-label"
                    >Full Name</label
                  >
                  <div class="col-sm-9">
                    <input
                      type="text"
                      class="form-control"
                      id="input-hoten"
                      placeholder="Full Name"
                      required
                    />
                  </div>
                </div>
                <div class="form-group row mb-3">
                  <label class="col-sm-3 col-form-label">Gender</label>
                  <div class="col-sm-9">
                    <div
                      class="custom-control custom-radio custom-control-inline"
                    >
                      <input
                        type="radio"
                        class="custom-control-input"
                        id="input-gioitinh-male"
                        name="input-gioitinh"
                        value="1"
                      />
                      <label
                        class="custom-control-label"
                        for="input-gioitinh-male"
                        >Male</label
                      >
                    </div>
                    <div
                      class="custom-control custom-radio custom-control-inline"
                    >
                      <input
                        type="radio"
                        class="custom-control-input"
                        id="input-gioitinh-female"
                        name="input-gioitinh"
                        value="0"
                      />
                      <label
                        class="custom-control-label"
                        for="input-gioitinh-female"
                        >Female</label
                      >
                    </div>
                  </div>
                </div>
                <div class="form-group row mb-3">
                  <label for="input-ngaysinh" class="col-sm-3 col-form-label"
                    >Birth Date</label
                  >
                  <div class="col-sm-9">
                    <input
                      type="date"
                      class="form-control"
                      id="input-ngaysinh"
                      required
                    />
                    <small class="text-muted"
                      >Birth date should be between 1960 and 2005.</small
                    >
                  </div>
                </div>
                <div class="form-group row mb-3">
                  <label for="input-dienthoai" class="col-sm-3 col-form-label"
                    >Phone Number</label
                  >
                  <div class="col-sm-9">
                    <input
                      type="text"
                      class="form-control"
                      id="input-dienthoai"
                      placeholder="Phone Number"
                    />
                  </div>
                </div>
                <div class="form-group row mb-3">
                  <label for="input-diachi" class="col-sm-3 col-form-label"
                    >Address</label
                  >
                  <div class="col-sm-9">
                    <textarea
                      class="form-control"
                      id="input-diachi"
                      rows="4"
                      placeholder="Address"
                    ></textarea>
                  </div>
                </div>
                <div class="form-group row mb-3">
                  <label for="input-hinhanh" class="col-sm-3 col-form-label"
                    >Image</label
                  >
                  <div class="col-sm-9">
                    <input
                      type="file"
                      class="form-control-file"
                      id="input-hinhanh"
                    />
                  </div>
                </div>
                <div class="form-group row mb-3">
                  <label for="input-idpb" class="col-sm-3 col-form-label"
                    >Department ID</label
                  >
                  <div class="col-sm-9">
                    <input
                      type="text"
                      class="form-control"
                      id="input-idpb"
                      placeholder="Department ID"
                    />
                  </div>
                </div>
                <div class="form-group row mb-3">
                  <label for="input-idbp" class="col-sm-3 col-form-label"
                    >Boss ID</label
                  >
                  <div class="col-sm-9">
                    <input
                      type="text"
                      class="form-control"
                      id="input-idbp"
                      placeholder="Boss ID"
                    />
                  </div>
                </div>
                <div class="form-group row mb-3">
                  <label for="input-idcv" class="col-sm-3 col-form-label"
                    >Job ID</label
                  >
                  <div class="col-sm-9">
                    <input
                      type="text"
                      class="form-control"
                      id="input-idcv"
                      placeholder="Job ID"
                    />
                  </div>
                </div>
                <div class="form-group row mb-3">
                  <label for="input-idtd" class="col-sm-3 col-form-label"
                    >Title ID</label
                  >
                  <div class="col-sm-9">
                    <input
                      type="text"
                      class="form-control"
                      id="input-idtd"
                      placeholder="Title ID"
                    />
                  </div>
                </div>

                <button type="button" class="btn btn-primary" id="submit-btn">
                  Add Employee
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
